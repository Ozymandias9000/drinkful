@import '../../../variables.styl'

.search--box
  text-align center
  height 40px
  display flex
  justify-content center
  align-items center

form
  display flex
  justify-content center
  align-items center
  width 200px
  height 40px

input[type='text']
  border 1px solid gray
  padding 5px

input[type='text']:focus
  background rgba(0,0,0,.03)

input
  font-size 1rem
  height 25px
  border none
  border-radius 3px
  margin-right 10px
  display relative

input[type='submit']
  padding : 6px 9px 6px 9px
  background gray
  color white
  margin 1px 0 1px 0

